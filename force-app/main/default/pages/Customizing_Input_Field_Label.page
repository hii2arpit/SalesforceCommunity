<apex:page standardController="Contact">
 <apex:form >
   <apex:pageBlock Title="Learning Stage:{!contact.Name}">
    <apex:pageBlockSection title="Contact Details" columns="1">
    <apex:inputField value="{!contact.Phone}"/>
    <apex:outputField value="{!contact.mobilePhone}" />
    <apex:inputtext value="{!contact.Email}" label="{!contact.FirstName+'s Email'}"/>
   </apex:pageBlockSection>
       <apex:pageBlockbuttons >
       <apex:commandButton action="{!Save}" value="Save"/>
       </apex:pageBlockbuttons>
  </apex:pageBlock>
    </apex:form>
</apex:page>